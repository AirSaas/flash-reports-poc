# Flash Reports Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Optional, for admin operations

# =============================================================================
# Anthropic Configuration
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key

# =============================================================================
# AirSaas Configuration (Optional)
# =============================================================================
AIRSAAS_API_KEY=your-airsaas-api-key
# Maximum pages to fetch per paginated endpoint (0 = no limit)
AIRSAAS_MAX_PAGES=5

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_MAX_AGE_HOURS=24
